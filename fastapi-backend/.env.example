# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/baby_raffle_saas
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Configuration - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Domain Configuration
BASE_DOMAIN=base2ml.com
ONBOARDING_SUBDOMAIN=mybabyraffle

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=https://*.base2ml.com,https://mybabyraffle.base2ml.com,http://localhost:3000

# Redis (for rate limiting and caching - optional)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
FREE_PLAN_REQUESTS_PER_MINUTE=100
PREMIUM_PLAN_REQUESTS_PER_MINUTE=500
ENTERPRISE_PLAN_REQUESTS_PER_MINUTE=2000

# Security
SECURE_COOKIES=True
SESSION_COOKIE_DOMAIN=.base2ml.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret
STRIPE_BASIC_PRICE_ID=price_your_basic_plan_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_premium_plan_price_id

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
BASE_URL=https://api.base2ml.com

# Deployment Configuration
DEPLOYMENT_WEBHOOK_URL=https://your-deployment-service.com/webhook
BASE_DOMAIN=base2ml.com